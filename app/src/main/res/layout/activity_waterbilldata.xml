<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Waterbilldata">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="10dp"
                android:text="Customer Bill Details"
                android:textColor="@color/colorPrimary"
                android:textSize="28dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Consumer Name   :"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/a"
                    android:textSize="20dp"
                    android:textColor="#DD000000"
                    android:layout_margin="10dp"
                    android:layout_width="188dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/cons" />

            </RelativeLayout>

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/addre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Address Details     :"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/b"
                    android:textSize="20dp"
                    android:textColor="#DD000000"
                    android:layout_margin="10dp"
                    android:layout_width="188dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/addre" />
            </RelativeLayout>

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/mno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Mobile Number      :"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/c"
                    android:textSize="20dp"
                    android:textColor="#DD000000"
                    android:layout_margin="10dp"
                    android:layout_width="188dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/mno" />
            </RelativeLayout>

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/billd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="CAN Number          :"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/d"
                    android:textSize="20dp"
                    android:textColor="#DD000000"
                    android:layout_margin="10dp"
                    android:layout_width="188dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/billd" />
            </RelativeLayout>

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/catgy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Category                  :"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/e"
                    android:textSize="20dp"
                    android:textColor="#DD000000"
                    android:layout_margin="10dp"
                    android:layout_width="188dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/catgy" />
            </RelativeLayout>

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/td"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Amount due            :  ₹"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/f"
                    android:textSize="20dp"
                    android:textColor="#DD000000"
                    android:layout_margin="10dp"
                    android:layout_width="188dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/td" />
            </RelativeLayout>

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="total amount to be paid : ₹"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/g"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/tp" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Note : You can pay maximum of ₹20000/-"
                android:textColor="#43327E" />

            <Button
                android:id="@+id/pn"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:text="@string/pay_now"
                android:textColor="#fff"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/custom_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>