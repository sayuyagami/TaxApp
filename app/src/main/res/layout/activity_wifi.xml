<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/cutlines"
    tools:context=".Wifi">

    <RelativeLayout
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="7.5"
        android:padding="50dp"
        android:paddingLeft="50dp"
        android:paddingTop="50dp"
        android:paddingRight="50dp"
        android:paddingBottom="50dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        tools:targetApi="lollipop">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="421dp"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/internet_bill_payment"
                    android:textColor="#43327E"
                    android:textSize="24dp" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/this_service_enables_you_to_pay_your_internet_bills_online"
                android:textAlignment="center"
                android:textColor="#9E9696"
                android:textSize="16sp"
                android:textStyle="normal" />

            <RelativeLayout
                android:layout_width="330dp"
                android:layout_height="99dp">

                <TextView
                    android:id="@+id/textprov"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:text="@string/please_select_provider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/act"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/textprov"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="232dp"
                    android:background="@drawable/custom_click"
                    android:padding="15dp"
                    android:src="@drawable/act" />

                <ImageView
                    android:id="@+id/digisol"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/textprov"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="-1dp"
                    android:layout_marginEnd="143dp"
                    android:background="@drawable/custom_click"
                    android:padding="15dp"
                    android:src="@drawable/digisol" />

                <ImageView
                    android:id="@+id/hathway"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/textprov"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="134dp"
                    android:layout_marginTop="-2dp"
                    android:layout_marginEnd="52dp"
                    android:background="@drawable/custom_click"
                    android:src="@drawable/hat" />

            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/accno"
                    android:layout_width="315dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="22dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:ems="10"
                    android:hint="@string/enter_account_number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="10dp" />

                <TextView
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:layout_below="@+id/accno"
                    android:text="@string/disclaimer_this_service_is_available_for_the_geography_of_hyderabad_rangareddy_and_medchal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp">

                <Button
                    android:id="@+id/tvpay"
                    android:layout_width="131dp"
                    android:layout_height="36dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="92dp"
                    android:layout_marginEnd="98dp"
                    android:background="@drawable/custom_button"
                    android:padding="5dp"
                    android:text="@string/proceed"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>