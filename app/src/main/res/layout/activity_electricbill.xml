<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#41C0C0C0"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Electricbill">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_alignParentEnd="true"
        android:layout_weight="8"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="50dp"
        android:padding="50dp"
        android:paddingLeft="50dp"
        android:paddingTop="50dp"
        android:paddingRight="50dp"
        android:paddingBottom="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="25dp"
        tools:targetApi="lollipop">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/electricity_bill_payment"
                    android:textColor="#43327E"
                    android:textSize="24dp" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/you_can_now_pay_your_electricity_bills_online_here_you_can_pay_bills_for_tsspdcl_also_abbreviated_as_telangana_state_southern_power_distribution_company_limited"
                android:textAlignment="center"
                android:textColor="#9E9696"
                android:textSize="16sp"
                android:textStyle="normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/sp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="233dp"
                    android:background="@drawable/custom_click"
                    android:padding="15dp"
                    android:src="@drawable/sourthernpower" />

                <ImageView
                    android:id="@+id/nd"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="131dp"
                    android:background="@drawable/custom_click"
                    android:padding="15dp"
                    android:src="@drawable/nd" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <Button
                    android:id="@+id/district"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="310dp"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:ems="10"
                    android:padding="10dp"
                    android:spinnerMode="dialog"
                    android:text="@string/select_district" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <Button
                    android:id="@+id/ero"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="310dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="#fff"
                    android:ems="10"
                    android:padding="10dp"
                    android:spinnerMode="dialog"
                    android:text="@string/select_ero" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/scno"
                    android:layout_width="315dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:ems="10"
                    android:hint="@string/sc_no"
                    android:inputType="number"
                    android:maxLength="9" />

                <!--<TextView
                    android:id="@+id/electricsample"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/scno"
                    android:layout_alignTop="@+id/scno"
                    android:layout_alignEnd="@+id/scno"
                    android:layout_alignBottom="@+id/scno"
                    android:layout_gravity="right"
                    android:layout_marginStart="228dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="12dp"
                    android:maxLength="10"
                    android:text="Samplebill"
                    android:textColor="#0097A7" />-->

            </RelativeLayout>

            <ProgressBar
                android:id="@+id/bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <Button
                android:id="@+id/submitbtn1"
                android:layout_width="131dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_button"
                android:text="@string/submit"
                android:textColor="#fff"
                android:textSize="18sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>